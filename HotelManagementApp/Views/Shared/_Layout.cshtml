@{
    Layout = null;
    var isLoggedIn = Session["UserId"] != null;
    var role = Session["UserRole"]?.ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - HotelBookingApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Booking")">ðŸ¨ HotelBookingApp</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (isLoggedIn && role == "User")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Booking")">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyBookings","Booking")">My Bookings</a>
                        </li>
                    }
                    @if (isLoggedIn && role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Users","Admin")">Manage Users</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout","Account")">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login","Account")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register","Account")">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>
