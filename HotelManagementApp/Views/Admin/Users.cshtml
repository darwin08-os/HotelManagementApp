@model IEnumerable<HotelManagementApp.Models.User>
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Manage Users</h2>
<hr />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.UserId</td>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>
                    @if (u.Role != "Admin")
                    {
                        <a href="@Url.Action("DeleteUser","Admin", new { id = u.UserId })" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
